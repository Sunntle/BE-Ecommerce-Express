        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<style>
    form{
       width: clamp(300px,50%,500px );

    }
</style>
<body class="bg-secondary bg-opacity-10">
    <%- include('header') %>
    <div class="container mt-5 ">
        <div class="wrap d-flex align-items-center justify-content-center">
            <form name="frmdk" method="POST" action="/users/luu" class="border bg-dark bg-opacity-10 rounded p-4">
                <h1 class="text-center py-3">Đăng ký</h1>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" name="username" id="floatingInput2" placeholder="name@example.com">
                    <label for="floatingInput2">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" name="password" id="floatingInput3" placeholder="name@example.com">
                    <label for="floatingInput3">Password</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" name="email" id="floatingInput4" placeholder="name@example.com">
                    <label for="floatingInput4">Email</label>
                </div>
                <div class="mb-3">
                    Đã có tài khoản ? <a href="/users/dangnhap" class="text-decoration-none">Đăng nhập</a>
                </div>        
                <div class="mb-3"><span class="text-success"><%=thongbao%></span></div>
                <button class="btn btn-info" id="login">Xác nhận</button>
            </form>
        </div>
    </div>
    <% - include('footer') %>
</body>
